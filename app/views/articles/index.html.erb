<div class="container">
	<div class="row">
		<div class="col-md-8">
			<% @articles.each do |article| %>
			<h2><%= link_to article.title, article %></h2>
			<p>Published at <small><%= article.created_at.strftime("%b %d, %Y") %></small></p>
			<p><%= truncate(article.content, length: 200)%></p>
			<% end %>
		</div>
	</div>
</div>
