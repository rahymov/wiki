<div class="container">
	<%= simple_form_for @article  do |f| %>
		<%= f.collection_select :category_id, Category.all.order("name ASC"), :id, :name, {promt: "Choose a Category"}, label: 'Category' %>
		<%= f.input :title, label: 'Title' %>		
		<%= f.input :content, label: 'Content' %>
		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>