<div class="container">
	<div class="row">
		<div class="col-md-8">
			<%= simple_form_for @article  do |f| %>
				<%= f.collection_select :category_id, Category.all.order("name ASC"), :id, :name, {promt: "Choose a Category"}, label: 'Category', class: "form-control"  %>
				<%= f.input :title, label: 'Title', class: "form-control"  %>		
				<%= f.input :content, label: 'Content', class: "form-control" %>
				<%= f.submit class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>